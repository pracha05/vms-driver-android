<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="activities.ReferenceCodeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/img_referal_ref_code"
            android:background="@drawable/referafriend"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="150dp"
            android:layout_width="200dp"
            android:layout_height="160dp" />

        <TextView
            android:layout_below="@+id/img_referal_ref_code"
            android:id="@+id/tv_referal_ref_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/we_have_a_gift_for_you_refer_your_friend_and_earn_a_10_discount_voucher_your_refernce_code_is_v52gs1"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:textAlignment="center"
            android:padding="15dp" />

        <Button
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:id="@+id/btn_refer"
            android:text="Invite and Earn"
            android:background="@drawable/button_round_cornor_selector"
            android:layout_margin="40dp"

            android:textColor="@color/colorWhite"
            android:layout_height="40dp" />

    </RelativeLayout>

</LinearLayout>